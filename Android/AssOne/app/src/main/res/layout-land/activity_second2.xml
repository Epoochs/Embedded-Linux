<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextViews for Mobile Number -->

    <TextView
        android:id="@+id/MobileNumberLabel_tv"
        android:layout_width="129dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Mobile Number"
        app:layout_constraintStart_toStartOf="@+id/tvMobileNumberValue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMobileNumberValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MobileNumberLabel_tv" />

    <!-- TextViews for Message -->

    <TextView
        android:id="@+id/MessageLabel_tv"
        android:layout_width="133dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:text="Message"
        app:layout_constraintStart_toStartOf="@+id/tvMessageValue"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/tvMessageValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MessageLabel_tv" />

    <!-- Close Button -->

    <Button
        android:id="@+id/CloseSecond_bt"
        android:layout_width="275dp"
        android:layout_height="0dp"
        android:text="Close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.993"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="9dp" />

    <Button
        android:id="@+id/btnShWr"
        android:layout_width="219dp"
        android:layout_height="52dp"
        android:layout_marginTop="42dp"
        android:text="Sh_Wr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MessageLabel_tv" />

    <Button
        android:id="@+id/btnShR"
        android:layout_width="219dp"
        android:layout_height="52dp"
        android:layout_marginTop="74dp"
        android:text="Sh_R"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CloseSecond_bt" />

    <Button
        android:id="@+id/btnFileWr"
        android:layout_width="219dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="File_Wr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSQWr" />

    <Button
        android:id="@+id/btnFileR"
        android:layout_width="219dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="File_R"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSQR" />

    <Button
        android:id="@+id/btnSQWr"
        android:layout_width="219dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:text="SQ_Wr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShWr" />

    <Button
        android:id="@+id/btnSQR"
        android:layout_width="219dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:text="SQ_R"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShR" />
</androidx.constraintlayout.widget.ConstraintLayout>